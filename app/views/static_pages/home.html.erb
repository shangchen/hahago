
<% provide(:title,"Home") %>
<div class="center jumbotron">

  <p class="hahafont text-left">Daily sentence:</p>
    <%= raw(@dailySentence) %> 

<% if !logged_in? %>
  <hr>
  <p class="hahafont">Welcome to the HaHaGo</p>


  <%= link_to "Info", info_path, class: "btn btn-lg btn-primary" %>
<% end %>
 
    
</div>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
     <div class="col-md-8">
      <h3>Microposts</h3>
      <%= render 'shared/feed' %>
    </div>   
  </div>
<% end %>
